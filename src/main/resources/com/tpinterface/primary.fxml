<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tpinterface.PrimaryController">
   <children>
      <Label text="Primary View" />
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Switch to Secondary View" />
      <Label text="Nouveau Label" textFill="#0c15c7">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Label>
      <Button mnemonicParsing="false" onAction="#btnPivoterClick" text="Pivoter" />
      <TextField fx:id="txtPivot" prefHeight="1.0" prefWidth="159.0" promptText="45">
         <VBox.margin>
            <Insets top="70.0" />
         </VBox.margin>
      </TextField>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
